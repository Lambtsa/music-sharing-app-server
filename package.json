{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format:check": "prettier --ignore-path .gitignore --check .",
    "format:fix": "prettier --ignore-path .gitignore --write .",
    "lint:check": "eslint --ignore-path .gitignore --ext .jsx,.js,.tsx,.ts ./",
    "lint:fix": "npm run lint:check -- --fix",
    "lint:tsc": "tsc --noEmit --project tsconfig.json",
    "prepare": "husky install",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "start": "NODE_ENV=production node ./dist/index.js",
    "dev": "NODE_ENV=development nodemon",
    "build": "tsc && tsc-alias",
    "seed:pre": "rm -rf /.dist && npm run build",
    "seed": "npm run seed:pre && knex seed:run",
    "migrate:prod": "NODE_ENV=production knex migrate:latest",
    "migrate:dev": "NODE_ENV=development knex migrate:latest",
    "remote:restart": "bash ./deploy/restart.sh",
    "remote:destroy": "bash ./deploy/delete.sh",
    "remote:start": "bash ./deploy/start.sh",
    "remote:deploy": "bash ./deploy/pull.sh && bash ./deploy/deploy.sh && bash ./deploy/start.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lambtsa/music-sharing-app-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lambtsa/music-sharing-app-server/issues"
  },
  "homepage": "https://github.com/Lambtsa/music-sharing-app-server#readme",
  "dependencies": {
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-rate-limit": "6.7.0",
    "helmet": "6.0.1",
    "knex": "2.3.0",
    "morgan": "^1.10.0",
    "node-fetch": "2.6.6",
    "pg": "^8.8.0",
    "pino": "8.8.0",
    "prettier": "2.8.1",
    "redis": "4.5.1",
    "uuid": "9.0.0",
    "zod": "3.20.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.17",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "i": "^0.3.7",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "npm": "^9.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  }
}
